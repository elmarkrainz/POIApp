<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.fhj.mobappdev.poiapp.StartActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnAddPoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:onClick="openAddPoi"

        android:text="@string/buttonAdd"

        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="my Pois"
        android:onClick="openAllPois"
        android:layout_below="@+id/btnAddPoi"
        android:layout_alignStart="@+id/btnAddPoi" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:onClick="openLogger"
        android:text="LoggerService"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />
</RelativeLayout>
